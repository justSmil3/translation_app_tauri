{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "WC Translator",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
	  "path": {
        "all": true, // enable all Path APIs
      },
      "shell": {
        "all": false,
        "open": true
      },
	  "fs": {
		  "all": true
	  },
	  "dialog": {
        "all": true, // enable all dialog APIs
        "ask": true, // enable dialog ask API
        "confirm": true, // enable dialog confirm API
        "message": true, // enable dialog message API
        "open": true, // enable file open API
        "save": true // enable file save API
      }
    },
    "windows": [
      {
        "title": "WC Translation Tool",
        "width": 800,
        "height": 600, 
		"fileDropEnabled": true
      }
    ],
    "security": {
      "csp": "default-src blob: data: filesystem: ws: wss: http: https: tauri: 'unsafe-eval' 'unsafe-inline'"
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.trans.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  },
	"plugins": {
		"store": {
		    "dir": "."
	  }
	}
  }

